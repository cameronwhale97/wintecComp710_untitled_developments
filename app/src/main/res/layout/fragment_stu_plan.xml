<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.StuPlan.PlaceholderFragment">

    <TextView
        android:id="@+id/SPTVModsToComplet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorDPMWhite"
        android:paddingLeft="20dp"
        android:text="Modules to Complete"
        android:textAlignment="textStart"
        android:textSize="24sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/sp_recyclerv_yet_to_comp"
        android:layout_width="match_parent"
        android:layout_height="230dp" />

    <TextView
        android:id="@+id/SPTVModsCompleted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/colorDPMWhite"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:text="Completed Modules"
        android:textAlignment="textStart"
        android:textSize="24sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/sp_recyclerv_comp"
        android:layout_width="match_parent"
        android:layout_height="230dp" />
</LinearLayout>