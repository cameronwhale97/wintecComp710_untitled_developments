<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorDPMWhite"
    tools:context=".otsStudentAdmin">

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Welcome."
        android:textSize="36sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto"
        android:text="Please choose your stream"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:onClick="onClickDBA"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="288dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:padding="5dp"
            app:srcCompat="@drawable/stream_db" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/roboto"
                android:padding="10dp"
                android:paddingRight="10dp"
                android:text="@string/db"
                android:textAlignment="viewStart"
                android:textSize="28sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:onClick="onClickMWD"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="286dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:padding="5dp"
            app:srcCompat="@drawable/stream_multi_web" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/roboto"
                android:padding="10dp"
                android:paddingRight="10dp"
                android:text="@string/mwd"
                android:textAlignment="viewStart"
                android:textSize="28sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:onClick="onClickNE"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="285dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:padding="5dp"
            app:srcCompat="@drawable/stream_network" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/roboto"
                android:padding="10dp"
                android:text="@string/ne"
                android:textAlignment="viewStart"
                android:textSize="28sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:onClick="onClickSE"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="287dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:padding="5dp"
            app:srcCompat="@drawable/stream_sw_engine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/roboto"
                android:padding="10dp"
                android:text="@string/se"
                android:textAlignment="viewStart"
                android:textSize="28sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>




